<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<!--    <RelativeLayout style="@style/title_layout">-->
<!--        <com.manggeek.android.geek.view.BackView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_centerVertical="true"/>-->
<!--        <TextView-->
<!--            style="@style/title_text"-->
<!--            android:text="这个是第几个落地页" />-->
<!--    </RelativeLayout>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="1dp"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/option"
        android:background="#e6e7ec"/>

    <RadioGroup
        android:id="@+id/option"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#fff"
        android:paddingTop="6dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selector_home"
            android:gravity="center_horizontal"
            android:paddingTop="3dp"
            android:text="首页"
            android:textColor="@drawable/selector_main_text"
            android:textSize="10sp"/>


        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selector_second"
            android:gravity="center_horizontal"
            android:paddingTop="3dp"
            android:text="第二页"
            android:textColor="@drawable/selector_main_text"
            android:textSize="10sp"/>


        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_third"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal"
            android:paddingTop="7dp"
            android:text="第三页"
            android:textColor="@drawable/selector_main_text"
            android:textSize="10sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selector_mine"
            android:gravity="center_horizontal"
            android:paddingTop="3dp"
            android:text="我的"
            android:textColor="@drawable/selector_main_text"
            android:textSize="10sp"/>
    </RadioGroup>

</LinearLayout>
